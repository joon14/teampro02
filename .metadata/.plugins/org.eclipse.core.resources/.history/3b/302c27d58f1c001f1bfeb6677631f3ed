    <select id="loginCheck" parameterType="com.spring.dto.Member" resultType="String">
        SELECT id FROM member WHERE id = #{id}
    </select>
    
    <update id="changePw" parameterType="com.spring.dto.Member">
        UPDATE member SET pw = #{pw} WHERE id = #{id}
    </update>
    
     -->
</mapper>